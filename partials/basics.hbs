{{#resume.basics}}
<section id="basics">
  <div class="header">
    <div class="name-label">
      <h1>{{name}}</h1>
      <p>{{label}}</p>
      <div class="contact">
        <ul class="inline-list">
          {{#if location}}
            <li class="grey">{{location.city}}, {{location.countryCode}}</li>
          {{/if}}

          {{#if email}}
            <li class="grey">
              <a href="mailto:{{email}}" target="_blank" rel="noopener noreferrer">{{email}}</a>
            </li>
          {{/if}}

          {{#if phone}}
            <li class="grey">
              <a href="tel:{{phone}}">{{phone}}</a>
            </li>
          {{/if}}

          {{#if website}}
            <li class="grey">
              <a href="{{website}}" target="_blank" rel="noopener">website</a>
            </li>
          {{/if}}

          {{#each profiles}}
            <li class="grey">
              <a href="{{url}}" target="_blank" rel="noopener">{{network}}</a>
            </li>
          {{/each}}
        </ul>
      </div>
    </div>
    {{#if image}}
      <img src="{{image}}" class="profile-image" />
    {{/if}}
    {{#if pdfLink}}
      <a class="pdf" title="Download PDF" href={{pdfLink}}>
        {{> download-icon}}
      </a>
    {{/if}}
  </div>
  
  {{#if summary}}
    <p class="summary">{{{summary}}}</p>
  {{/if}}
</section>
{{/resume.basics}}