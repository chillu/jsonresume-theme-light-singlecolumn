{{#if resume.certificates.length}}
<section id="certificates">
	<h2>Certificates</h2>
	{{#each resume.certificates}}
		<div class="item">
			<div class="overview">
				<h3 class="title">
					{{#if url}}
						<a target="_blank" rel="noopener" href="{{url}}">{{name}}</a>
					{{else}}
						{{name}}
					{{/if}}
				</h3>

				{{#if date}}
					<p class="date grey">
						{{ date date "MMM YYYY"}}
					</p>
				{{/if}}
			</div>
		</div>
	{{/each}}
</section>
{{/if}}