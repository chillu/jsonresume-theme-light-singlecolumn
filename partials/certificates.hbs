{{#if resume.certificates.length}}
	{{#each resume.certificates}}
		<section class="position">
			{{#if @first}}
				<h2>Certificates</h2>
			{{/if}}
			<div class="overview">
				<h3 class="title">
					{{#if url}}
						<a target="_blank" rel="noopener" href="{{url}}">{{name}}</a>
					{{else}}
						{{name}}
					{{/if}}
				</h3>

				{{#if date}}
					<p class="date grey">
						{{ date date "MMM YYYY"}}
					</p>
				{{/if}}
			</div>
		</section>
	{{/each}}
{{/if}}