{{#if resume.awards.length}}
	{{#each resume.awards}}
		<section class="award">
			{{#if @first}}
				<h2>Awards</h2>
			{{/if}}
			<div class="overview">
				<h3 class="title">
					{{#if website}}
						<a target="_blank" rel="noopener" href="{{website}}">{{awarder}}</a>:
					{{else}}
						{{awarder}}:
					{{/if}}
					{{title}}
				</h3>

				{{#if date}}
					<p class="date grey">
						{{ date date "MMM YYYY"}}
					</p>
				{{/if}}
			</div>
			{{#if summary}}
				<p class="summary">{{{summary}}}</p>
			{{/if}}
		</section>
	{{/each}}
{{/if}}