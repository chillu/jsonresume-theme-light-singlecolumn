{{#if resume.publications.length}}
	{{#each resume.publications}}
		<section class="position">
			{{#if @first}}
				<h2>Projects</h2>
			{{/if}}
			<div class="overview">
				<h3 class="title">
					{{#if website}}
						<a target="_blank" rel="noopener" href="{{website}}">{{name}}</a>:
					{{else}}
						{{name}}:
					{{/if}}
					{{title}}
				</h3>

				{{#if releaseDate}}
					<p class="date grey">
						{{ date releaseDate "MMM YYYY"}}
					</p>
				{{/if}}
			</div>
			{{#if publisher}}
			<div class="publisher">
				{{publisher}}
			</div>
			{{/if}}
			{{#if summary}}
				<p>{{{summary}}}</p>
			{{/if}}
		</section>
	{{/each}}
{{/if}}