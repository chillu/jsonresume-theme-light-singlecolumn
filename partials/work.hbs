{{#if resume.work.length}}
	<h2>Work Experience</h2>
	{{#each resume.work}}
		<section class="position">
			<div class="overview">
				<h3 class="title">
					{{~#if url~}}
						<a target="_blank" rel="noopener" href="{{url}}">{{name}}</a>
					{{~else~}}
						{{name}}
					{{~/if~}}
					{{~#if position~}}
						, {{position}}
					{{~/if~}}
				</h3>
				<p class="date grey">{{> date-range}}</p>
			</div>
			<div class="detail">
				{{#if summary}}
				<p class="summary">{{{summary}}}</p>
				{{/if}}

				{{#if highlights.length}}
				<ul class="highlights">
					{{#each highlights}}
					<li>{{{.}}}</li>
					{{/each}}
				</ul>
				{{/if}}
			</div>
		</section>
	{{/each}}
{{/if}}